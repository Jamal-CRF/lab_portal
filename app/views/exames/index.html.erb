<div class="container">
  <h1 class="text-center mt-5 mb-4">Lista de Exames</h1>

  <div class="row">
    <% @exames.each do |exame| %>
      <div class="col-md-4">
        <div class="card mb-3">
          <div class="card-body text-center">
            <h5 class="card-title mb-3"><%= exame.title %></h5>
            <p class="card-text"><strong>MÃ©dico:</strong> <%= exame.doctor.name %></p>
            <p class="card-text"><strong>Paciente:</strong> <%= exame.patient.name %></p>
            <%= link_to 'Ver Detalhes', exame_path(exame), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if current_user.doctor? %>
    <div class="text-center">
      <%= link_to 'Cadastrar Novo Exame', new_exame_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
