<div class="container">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
    <%= f.error_notification %>

    <div class="mb-3">
      <%= f.input :email, required: true, autofocus: true, input_html: { class: "form-control" } %>
    </div>

    <div class="mb-3">
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: "form-control" } %>
    </div>

    <div class="mb-3">
      <%= f.input :password_confirmation, required: true, input_html: { class: "form-control" } %>
    </div>

    <div class="mb-3">
      <%= f.input :name, required: true, input_html: { class: "form-control" } %>
    </div>

    <div class="mb-3">
      <%= f.input :phone_number, required: true, input_html: { class: "form-control" } %>
    </div>

    <%= f.fields_for :user_hospitals do |uh| %>
      <div class="mb-3">
        <%= uh.input :role, as: :radio_buttons, collection: UserHospital.roles.keys, item_wrapper_class: "form-check-inline" %>
      </div>

      <div class="mb-3">
        <%= uh.collection_select :hospital_id, Hospital.all, :id, :name, { prompt: "Select a hospital" }, class: "form-select" %>
      </div>
    <% end %>

    <div class="text-end">
      <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
